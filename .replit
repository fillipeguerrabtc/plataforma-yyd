modules = ["python-3.11", "nodejs-20", "postgresql-16", "python3"]
[agent]
expertMode = true
integrations = ["javascript_stripe:1.0.0", "twilio:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "postgresql", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Client"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backoffice"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Aurora"

[[workflows.workflow]]
name = "Client"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd yyd/apps/client && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backoffice"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd yyd/apps/backoffice && npm run dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Aurora"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd yyd/aurora && python main.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 33523
externalPort = 4200

[[ports]]
localPort = 34741
externalPort = 3002

[[ports]]
localPort = 43533
externalPort = 3003
